            this.greetings = ['hello', 'hi', 'hey', 'good morning', 'good evening', 'namaste'];
            this.goodbyes = ['bye', 'goodbye', 'see you', 'thanks', 'thank you'];
          }

          getResponse(input) {
            const lowerInput = input.toLowerCase().trim();

            // Handle greetings
            if (this.greetings.some(greeting => lowerInput.includes(greeting))) {
              return {
                response: "Hello! üôè Welcome to Nangal Tourism! I'm your virtual guide to explore the beautiful city of Nangal. How can I help you plan your perfect visit today?",
                intent: 'greeting'
              };
            }

            // Handle goodbyes
            if (this.goodbyes.some(goodbye => lowerInput.includes(goodbye))) {
              return {
                response: "Thank you for using Nangal Tourism Assistant! üôè Have a wonderful trip to Nangal! Feel free to ask me anything anytime. Safe travels! üõ´",
                intent: 'goodbye'
              };
            }
            
            // Handle Shivalik Hills specifically
            if (lowerInput.includes('shivalik') || lowerInput.includes('hills')) {
              return {
                response: "üèîÔ∏è **Shivalik Hills in Nangal**\n\n‚Ä¢ **Geography**: Part of the outer Himalayan range\n‚Ä¢ **Elevation**: 350m to 1,500m above sea level\n‚Ä¢ **Vegetation**: Rich pine forests and diverse flora\n‚Ä¢ **Wildlife**: Home to various bird species and small mammals\n‚Ä¢ **Activities**: Hiking, trekking, nature walks, photography\n‚Ä¢ **Best Trails**: Naina Devi trail, Bhakra viewpoint trek\n‚Ä¢ **Best Time**: October to March for clear views\n‚Ä¢ **Difficulty**: Easy to moderate trails available\n\nThe Shivalik Hills offer breathtaking panoramic views of Nangal and the surrounding valleys. Would you like to know about guided tours or specific hiking routes?",
                intent: 'attractions'
              };
            }

            // Check for specific categories
            for (const [category, data] of Object.entries(this.responses)) {
              if (data.keywords.some(keyword => lowerInput.includes(keyword))) {
                return {
                  response: data.response,
                  intent: category
                };
              }
            }

            // Default response with helpful suggestions
            return {
              response: "I'd be happy to help you explore Nangal! üèîÔ∏è‚ú®\n\n**I can provide detailed information about:**\n‚Ä¢ üèõÔ∏è Tourist attractions and must-visit places\n‚Ä¢ üìÖ Trip planning and customized itineraries\n‚Ä¢ üå§Ô∏è Best time to visit and weather information\n‚Ä¢ üè® Hotels and accommodation options\n‚Ä¢ üçΩÔ∏è Food, dining, and local cuisine\n‚Ä¢ üöó Transportation and travel details\n‚Ä¢ üéØ Activities and things to do\n\n**Just ask me something like:**\n‚Ä¢ \"What are the main attractions?\"\n‚Ä¢ \"Plan a 2-day trip\"\n‚Ä¢ \"Best time to visit?\"\n‚Ä¢ \"Where to stay?\"\n\nWhat would you like to know about Nangal? üòä",
              intent: 'unknown'
            };
          }
        }

        // Initialize chatbot
        const chatbot = new TravelChatbot();
        
        // Default suggestions for different intents
        const defaultSuggestions = {
          attractions: ['Tell me about Bhakra Dam', 'What are Shivalik Hills?', 'Govind Sagar Lake activities'],
          planning: ['Plan a 2-day trip', 'Nature activities', 'Family-friendly itinerary'],
          timing: ['Best hotels to stay', 'Winter activities', 'Monsoon precautions'],
          accommodation: ['Budget stays', 'Hotels near dam', 'Homestay options'],
          food: ['Local specialties', 'Vegetarian options', 'Best restaurants'],
          transport: ['Local transport', 'Taxi services', 'Parking facilities'],
          activities: ['Adventure activities', 'Family activities', 'Cultural experiences'],
          default: ['Main attractions', 'Plan a trip', 'Best time to visit', 'Where to stay']
        };

        // DOM elements
        const chatbotToggle = document.getElementById('chatbot-toggle');
        const chatbotWindow = document.getElementById('chatbot-window');
        const chatbotClose = document.getElementById('chatbot-close');
        const chatInput = document.getElementById('chat-input');
        const sendBtn = document.getElementById('send-btn');
        const messagesContainer = document.getElementById('chatbot-messages');
        const typingIndicator = document.getElementById('typing-indicator');
        const suggestionsContainer = document.getElementById('suggestions');

        // Toggle chatbot
        chatbotToggle.addEventListener('click', () => {
          chatbotWindow.classList.toggle('active');
          if (chatbotWindow.classList.contains('active')) {
            chatInput.focus();
          }
        });

        // Close chatbot
        chatbotClose.addEventListener('click', () => {
          chatbotWindow.classList.remove('active');
        });

        // Send message function
        function sendMessage() {
          const message = chatInput.value.trim();
          if (message) {
            addMessage(message, 'user');
            chatInput.value = '';

            // Show typing indicator
            showTypingIndicator();

            // Get bot response after a realistic delay
            setTimeout(() => {
              const response = chatbot.getResponse(message);
              hideTypingIndicator();
              addMessage(response.response, 'bot');
              
              // Show relevant suggestions based on the response intent
              showSuggestions(response.intent);
            }, 1000 + Math.random() * 1000); // Random delay between 1-2 seconds
          }
        }

        // Add message to chat
        function addMessage(text, sender) {
          const messageDiv = document.createElement('div');
          messageDiv.className = `message ${sender}`;

          const avatar = document.createElement('div');
          avatar.className = 'message-avatar';
          avatar.textContent = sender === 'user' ? 'üë§' : 'ü§ñ';

          const content = document.createElement('div');
          content.className = 'message-content';

          // Enhanced text formatting
          const formattedText = text
            .replace(/\n/g, '<br>')
            .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
            .replace(/‚Ä¢ (.*?)(?=<br>|$)/g, '‚Ä¢ <span style="margin-left: 8px;">$1</span>');

          content.innerHTML = formattedText;

          messageDiv.appendChild(avatar);
          messageDiv.appendChild(content);

          messagesContainer.appendChild(messageDiv);
          messagesContainer.scrollTop = messagesContainer.scrollHeight;
          
          // Animate message appearance
          setTimeout(() => {
            messageDiv.style.opacity = '1';
            messageDiv.style.transform = 'translateY(0)';
          }, 10);
        }

        // Show typing indicator
        function showTypingIndicator() {
          typingIndicator.style.display = 'block';
          messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Hide typing indicator
        function hideTypingIndicator() {
          typingIndicator.style.display = 'none';
        }

        // Show suggestions based on intent
        function showSuggestions(intent) {
          // Clear previous suggestions
          suggestionsContainer.innerHTML = '';
          suggestionsContainer.style.display = 'flex';
          
          // Define suggestions based on intent
          let suggestions = [];
          
          switch(intent) {
            case 'attractions':
              suggestions = [
                'Tell me about Bhakra Dam',
                'What are Shivalik Hills?',
                'Govind Sagar Lake activities'
              ];
              break;
            case 'planning':
              suggestions = [
                'Plan a 2-day trip',
                'Nature activities',
                'Family-friendly itinerary'
              ];
              break;
            case 'timing':
              suggestions = [
                'Best hotels to stay',
                'Winter activities',
                'Monsoon precautions'
              ];
              break;
            case 'accommodation':
              suggestions = [
                'Budget stays',
                'Hotels near dam',
                'Homestay options'
              ];
              break;
            case 'food':
              suggestions = [
                'Local specialties',
                'Vegetarian options',
                'Best restaurants'
              ];
              break;
            case 'transport':
              suggestions = [
                'Local transport',
                'Taxi services',
                'Parking facilities'
              ];
              break;
            case 'activities':
              suggestions = [
                'Adventure activities',
                'Family activities',
                'Cultural experiences'
              ];
              break;
            case 'greeting':
            case 'unknown':
            default:
              suggestions = [
                'Main attractions',
                'Plan a trip',
                'Best time to visit',
                'Where to stay'
              ];
          }
          
          // Create suggestion buttons
          suggestions.forEach(suggestion => {
            const button = document.createElement('button');
            button.className = 'suggestion-btn';
            button.textContent = suggestion;
            button.onclick = () => sendSuggestion(suggestion);
            suggestionsContainer.appendChild(button);
          });
        }
        
        // Hide suggestions
        function hideSuggestions() {
          suggestionsContainer.style.display = 'none';
        }

        // Send suggestion
        function sendSuggestion(text) {
          chatInput.value = text;
          sendMessage();
        }

        // Event listeners
        sendBtn.addEventListener('click', sendMessage);

        chatInput.addEventListener('keypress', (e) => {
          if (e.key === 'Enter') {
            sendMessage();
          }
        });

        // Close chatbot when clicking outside
        document.addEventListener('click', (e) => {
          if (!chatbotWindow.contains(e.target) && !chatbotToggle.contains(e.target)) {
            chatbotWindow.classList.remove('active');
          }
        });

        // Auto-focus on input when chatbot opens
        const observer = new MutationObserver((mutations) => {
          mutations.forEach((mutation) => {
