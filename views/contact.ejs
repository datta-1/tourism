<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Contact Us | Nangal Tourism</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css" />

  <meta name="description" content="Get in touch with Nangal Tourism for inquiries, feedback, and assistance. We're here to help you plan your perfect visit." />
</head>
<body>

  <%- include('partials/header') %>

  <main class="py-5">
    <div class="container">
      <h1 class="text-center fw-bold text-primary mb-5">Get in Touch with Us</h1>
      
      <div class="row justify-content-center">
        <section class="col-md-6">
          <form action="/contact" method="POST" class="border rounded-4 p-4 shadow-sm bg-light needs-validation" novalidate>
            <div class="mb-3">
              <label for="name" class="form-label fw-semibold">Name<span class="text-danger">*</span></label>
              <input 
                type="text" 
                class="form-control" 
                name="name" 
                id="name" 
                placeholder="Your full name" 
                required 
                aria-describedby="nameHelp" 
              />
              <div class="invalid-feedback">
                Please enter your name.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="email" class="form-label fw-semibold">Email<span class="text-danger">*</span></label>
              <input 
                type="email" 
                class="form-control" 
                name="email" 
                id="email" 
                placeholder="you@example.com" 
                required 
                aria-describedby="emailHelp" 
              />
              <div class="invalid-feedback">
                Please enter a valid email address.
              </div>
            </div>
            
            <div class="mb-3">
              <label for="message" class="form-label fw-semibold">Message<span class="text-danger">*</span></label>
              <textarea 
                class="form-control" 
                name="message" 
                id="message" 
                rows="5" 
                placeholder="Write your message here..." 
                required
              ></textarea>
              <div class="invalid-feedback">
                Please enter your message.
              </div>
            </div>
            
            <button type="submit" class="btn btn-primary w-100" aria-label="Submit contact form">Submit</button>
          </form>
        </section>
      </div>

      <section class="mt-5">
        <h2 class="text-center fw-semibold mb-4">Find Us Here</h2>
        <div class="ratio ratio-16x9 rounded shadow-sm">
          <iframe
            src="https://www.google.com/maps?q=Nangal,Punjab,India&output=embed"
            title="Map location of Nangal, Punjab, India"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </section>
    </div>
  </main>

  <%- include('partials/footer') %>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Form validation & feedback -->
  <script>
    (() => {
      'use strict';
      const form = document.querySelector('form.needs-validation');
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        } else {
          // Optional: Show toast or feedback here
          alert("Thanks for contacting us! We'll get back to you soon.");
        }
        form.classList.add('was-validated');
      }, false);
    })();
  </script>

  <style>
    /* Enhance focus outline for accessibility */
    input:focus, textarea:focus {
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.5);
    }
  </style>

</body>
</html>
